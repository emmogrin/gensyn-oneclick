#!/bin/bash

# 🌟 Colors
GREEN='\033[0;32m'
NC='\033[0m'

# 🌟 Glorious Saint Khen Banner
echo -e "${GREEN}"
cat << "EOF"
███████╗ █████╗ ██╗███╗   ██╗████████╗    ██╗  ██╗██╗  ██╗███████╗███╗   ██╗
██╔════╝██╔══██╗██║████╗  ██║╚══██╔══╝    ██║ ██╔╝██║  ██║██╔════╝████╗  ██║
███████╗███████║██║██╔██╗ ██║   ██║       █████╔╝ ███████║█████╗  ██╔██╗ ██║
╚════██║██╔══██║██║██║╚██╗██║   ██║       ██╔═██╗ ██╔══██║██╔══╝  ██║╚██╗██║
███████║██║  ██║██║██║ ╚████║   ██║       ██║  ██╗██║  ██║███████╗██║ ╚████║
╚══════╝╚═╝  ╚═╝╚═╝╚═╝  ╚═══╝   ╚═╝       ╚═╝  ╚═╝╚═╝  ╚═╝╚══════╝╚═╝  ╚═══╝

       🕊️  The Saints bless Gensyn – CPU only
          🔱 Follow the path: @admirkhen
EOF
echo -e "${NC}"

# 🔧 Clone Gensyn repo
if [ ! -d "rl-swarm" ]; then
  echo "📥 Cloning Gensyn RL-Swarm..."
  git clone https://github.com/gensyn-ai/rl-swarm.git
else
  echo "📁 Gensyn repo already exists. Skipping clone."
fi

cd rl-swarm || exit 1

# 🐳 Run CPU container (build if needed)
echo "🚀 Launching Gensyn CPU node..."
docker compose run --rm --build -Pit swarm-cpu
